<Window x:Class="ScreenBarScanner.TextDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenBarScanner"
        mc:Ignorable="d"
        Title="TextDialog" Height="200" Width="300">
    <StackPanel>
        <StackPanel Height="19" Margin="0,0,-0.4,0" Orientation="Horizontal">
            <Button Content="Copy.." Width="75" Click="CopyBtnClick"/>
        </StackPanel>
        <TextBox x:Name="TextBox" Height="150" TextWrapping="Wrap" Text="Text" Margin="0,0,-0.4,0"/>
    </StackPanel>
</Window>
